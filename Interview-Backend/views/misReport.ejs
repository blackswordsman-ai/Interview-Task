<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Portal Registration MIS Report</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Add New MIS Report</h2>
        <form action="/mis-reports/add" method="POST" class="border p-3">
            <div class="row">
                <div class="col-md-6">
                    <label>Patient ID:</label>
                    <input type="text" name="patientId" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label>Patient Name:</label>
                    <input type="text" name="patientName" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label>Visit ID:</label>
                    <input type="text" name="visitId" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label>Service Name:</label>
                    <input type="text" name="serviceName" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label>Sample:</label>
                    <input type="text" name="sample" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label>Barcode No:</label>
                    <input type="text" name="barcodeNo" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label>Status:</label>
                    <select name="status" class="form-control">
                        <option value="Collected">Collected</option>
                        <option value="Accepted">Accepted</option>
                        <option value="Pending">Pending</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label>Sample Collected Date:</label>
                    <input type="date" name="sampleCollectedDate" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label>Sample Accepted Date (optional):</label>
                    <input type="date" name="sampleAcceptedDate" class="form-control">
                </div>
            </div>
            <button type="submit" class="btn btn-success mt-3">Add Report</button>
        </form>
    </div>
    

    <script>
        function filterReports() {
            let filter = document.getElementById("filterType").value;
            let search = document.getElementById("search").value;
            let fromDate = document.getElementById("fromDate").value;
            let toDate = document.getElementById("toDate").value;
            window.location.href = `?filter=${filter}&search=${search}&fromDate=${fromDate}&toDate=${toDate}`;
        }
    </script>
</body>
</html>
